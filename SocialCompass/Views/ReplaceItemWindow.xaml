<Window x:Class="SocialCompass.Views.ReplaceItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialCompass.Views"
        mc:Ignorable="d"
        Title="Замена записи" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <TextBlock Text="Вы пытаетесь удалить запись, которая используется в других таблицах! Заменить на:" 
                   TextWrapping="Wrap" Margin="10" FontSize="14" FontWeight="Bold" Foreground="#3E72AF"/>
        
        <ComboBox x:Name="ReplacementComboBox" Height="35" Margin="50, 60, 50, 80" FontSize="14"/>

        <Button HorizontalAlignment="Right" Content="Сохранить" Width="100" Background="#3E72AF" Height="45" Padding="10" Margin="0, 120, 10, 10" Click="ConfirmReplacement_Click" Style="{StaticResource CustomButtonStyle}"/>
    </Grid>
</Window>
