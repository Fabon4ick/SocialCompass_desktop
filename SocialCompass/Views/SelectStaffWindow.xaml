<Window x:Class="SocialCompass.Views.SelectStaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocialCompass.Views"
        mc:Ignorable="d"
        Title="Выбор замены" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Выберите сотрудника для замены:" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>

        <ComboBox x:Name="StaffComboBox" Margin="20,50,20,50" Height="30"/>

        <Button Content="Подтвердить" Width="100" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Margin="0,0,20,20" Click="Confirm_Click"/>
    </Grid>
</Window>
