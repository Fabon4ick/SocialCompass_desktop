<Window x:Class="SocialCompass.Views.RejectApplicationReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Причина отказа"
        Height="400"
        Width="1080"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Выберите причину отказа:" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="#3E72AF"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 30, 0, 0">
                <ComboBox x:Name="ReasonComboBox" Width="900" Height="35" FontSize="14"/>

                <Button Content="Подтвердить" Click="Confirm_Click" Margin="10, 0, 10, 0" Height="35" HorizontalAlignment="Right" Width="100" Background="#3E72AF" Style="{StaticResource CustomButtonStyle}"/>
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
</Window>
